# Planning Ingestion Agent Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Required
# =============================================================================

# Google Gemini API Key (for ADK and File Search)
GEMINI_API_KEY=your-gemini-api-key

# Firecrawl API Key (for web scraping)
FIRECRAWL_API_KEY=your-firecrawl-api-key

# Convex URL (your Convex deployment URL)
CONVEX_URL=https://your-deployment.convex.cloud

# Convex Deploy Key (for authenticated HTTP actions)
# Generate at: https://dashboard.convex.dev -> Settings -> Deploy Keys
CONVEX_DEPLOY_KEY=your-convex-deploy-key

# =============================================================================
# Optional - Opik Observability
# =============================================================================

# Opik API Key (for tracing and monitoring)
OPIK_API_KEY=your-opik-api-key

# Opik Workspace (optional)
OPIK_WORKSPACE=your-workspace

# Opik Project Name (defaults to "mkedev-planning-ingestion")
OPIK_PROJECT_NAME=mkedev-planning-ingestion
